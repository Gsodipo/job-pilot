{
  "name": "JobPilot Extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "storage", "tabs"],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "https://job-pilot-beta.vercel.app/*",

    "https://*.vercel.app/*"
  ],
  "action": {
    "default_title": "JobPilot",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*",

        "*://*.indeed.com/*",
        "*://*.indeed.ie/*",
        "*://*.indeed.co.uk/*",
        "*://ie.indeed.com/*",
        "*://uk.indeed.com/*",

        "*://*.glassdoor.com/*",
        "*://*.glassdoor.ie/*",
        "*://*.glassdoor.co.uk/*",

        "https://*.vercel.app/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
